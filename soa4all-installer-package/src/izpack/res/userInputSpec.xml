		</field>
		<field type="text" variable="installer.processeditor.optimizer">
			<spec txt="Optimizer Service (WSDL): *FIXME : Axis2 service URL*" size="100" 
				set="http://$installer.tomcat.hostname:$installer.tomcat.http/soa4all-service-construction-optimizer/services/services/KPI-Optimizer?wsdl"/>
